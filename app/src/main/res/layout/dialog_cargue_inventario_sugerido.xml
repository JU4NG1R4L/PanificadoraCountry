<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="co.com.panificadoracountry.FormCargueInventarioSugerido$PlaceholderFragment" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#d9dadb"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/logo_login" />

    <EditText
        android:id="@+id/editTextCantidadProductoSugerido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:hint="@string/ingrese_cantidad"
        android:textColor="@color/black"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <Button
            android:id="@+id/buttonAceptarCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Agregar" />

        <Button
            android:id="@+id/buttonCancelarCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>