<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background2">
	
   	<TableLayout
   		android:id="@+id/tblLayoutCiudadRutero" 
    	android:layout_marginTop="10dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    	
        <TableRow>
        	<TextView
		    	android:text="Seleccione Dia: "
		    	android:textColor="#000000"
		    	android:textStyle="bold"
		    	android:layout_width="wrap_content"		    	
		    	android:layout_height="wrap_content"
		    	android:layout_marginRight="10dp"
		    	/>		    
		    <Spinner 
		   		android:id="@+id/cbDiasRutero"
		   		android:layout_width="wrap_content"
		   		android:layout_height="wrap_content" 
		   		android:prompt="@string/prompt_dia_ruta"
		   		android:background="@drawable/apptheme_spinner_default_holo_light"
		   		>
		   	</Spinner>        
        </TableRow>
    </TableLayout>
	
	<ListView android:id="@+id/listaClienteRutero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/tblLayoutCiudadRutero"
        android:cacheColorHint="@android:color/transparent"
        android:layout_marginTop="7dp"/>
    
</RelativeLayout>
