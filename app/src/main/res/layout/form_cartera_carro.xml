<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Cartera Carro"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lyInventario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:paddingLeft="15dp"
                        android:text="Valor Inventario:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtInventario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="right"
                        android:layout_gravity="right|center_horizontal"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyCargue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Valor Cargue:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtCargue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_horizontal"
                        android:enabled="false"
                        android:gravity="right"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lySubtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="160dp"
                        android:text="SubTotal:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyConsignacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Consig + Efectivo:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtConsignacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="right"
                        android:layout_gravity="right|center_horizontal"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyCambio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Valor Cambio:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtCambio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="right"
                        android:layout_gravity="right|center_horizontal"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyDescuentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:layout_gravity="bottom"
                        android:text="Sumatoria Descuentos:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtDescuentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="right"
                        android:layout_gravity="right|center_horizontal"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyReteica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Sumatoria Reteica:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtReteica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="right"
                        android:layout_gravity="right|center_horizontal"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyRetefuente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Sumatoria Retefuente:"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtRetefuente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_horizontal"
                        android:enabled="false"
                        android:gravity="right"
                        android:text=""
                        android:textSize="18dp">

                    </EditText>
                </LinearLayout>

        <LinearLayout
            android:id="@+id/lyTotal"
            android:paddingTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="18dp"
                android:paddingLeft="160dp">

            </TextView>

            <EditText
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:textSize="18dp">

            </EditText>
        </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyFinalizar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="18dp">

                    <Button
                        android:id="@+id/btnAceptar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/check"
                        android:drawablePadding="5dp"
                        android:onClick="OnClickFormNoCompra"
                        android:text="Finalizar"
                        android:textColor="#000000"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>