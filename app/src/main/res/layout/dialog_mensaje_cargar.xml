<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp">
    
	<TableLayout
		android:paddingTop="5dp"
        android:background="#FFFFFF" 
        android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"
    	android:layout_gravity="center_horizontal">
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			
			<TextView
				android:text="Color"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
	        	android:layout_height="wrap_content"
		    	android:background="@android:drawable/editbox_dropdown_dark_frame"/>
	
			<TextView
	        	android:text="Estado"
	        	android:textStyle="bold"
	        	android:textColor="#FFFFFF" 
		    	android:layout_height="wrap_content"
		    	android:background="@android:drawable/editbox_dropdown_dark_frame"/>
        </TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView 
                android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:src="@drawable/sin_inventario" 
				android:background="@android:drawable/editbox_dropdown_light_frame"/>
            
            <TextView
	        	android:text="Sin Inventario"
		    	android:textStyle="bold" 
		    	android:textColor="#000000"
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center_vertical"
		    	android:background="@android:drawable/editbox_dropdown_light_frame" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView 
                android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:src="@drawable/existe" 
				android:background="@android:drawable/editbox_dropdown_light_frame"/>
            <TextView
	        	android:text="Incluido en el Pedido"
		    	android:textStyle="bold"
		    	android:textColor="#000000"
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center_vertical"
		    	android:background="@android:drawable/editbox_dropdown_light_frame" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView 
                android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:src="@drawable/disponible" 
				android:background="@android:drawable/editbox_dropdown_light_frame"/>
            <TextView
	        	android:text="Disponible"
		    	android:textStyle="bold"
		    	android:textColor="#000000"
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center_vertical"
		    	android:background="@android:drawable/editbox_dropdown_light_frame" />
		</TableRow>
	</TableLayout>
   
	<TextView
		android:id="@+id/lblMsg"
		android:textColor="#000000"
		android:layout_marginTop="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	<Button
		android:id="@+id/btnAceptar"
		android:text="Aceptar"  
		android:layout_marginTop="10dp"
		android:drawablePadding="10dp"
		android:layout_width="wrap_content" 		    	
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/aceptar" 
    	android:layout_gravity="center_horizontal"/>
</LinearLayout>